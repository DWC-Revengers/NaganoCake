<div class="container">
  <div class="row" style="margin: 30px 0 40px 0;">
    <div class="col-md-2"></div>

    <div class=" col-md-9">
      <div class="row">
        <div class="col-md-3 text-left">
          <p><strong style="font-size: 26px;">商品一覧</strong>（全<%= @sweets.count %>件）</p>
        </div>
      </div>
      <% @sweets.each do |sweet| %>
        <div class="row" style="margin-top: 5px;">
          <div class="col-md-3 text-left">
            <div class="row">
              <div class="col-md-12 text-left">
                <%= link_to public_sweet_path(sweet.id) do %>
                  <%= attachment_image_tag sweet, :image, :fill, 170, 100, format: 'jpeg', fallback: "no_image.jpg", size: "170x100" %>
                <% end %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 text-left" style="margin-top: 20px;">
                <strong><p><%= sweet.name %></p></strong>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 text-left">
                <strong><p><%= sweet.unit_price %></p></strong>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= paginate @sweets %>

    <div class="col-md-1"></div>
  </div>
</div>
