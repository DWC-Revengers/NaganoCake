<div class="container">
  <div class="row">
    <div class="col-md-3 text-center" style="margin: 30px 0 35px 0;">
      <h5 style="background-color: #cd5c5c; color: white;">ジャンル一覧・追加</h5>
    </div>
  </div>
    <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
      <div class="row" style="font-size: 13px; margin-top: 10px;">
        <div class="col-md-2 text-center">
          <h6>ジャンル名</h6>
        </div>
        <div class="col-md-3 text-center">
          <%= f.text_field :name, autofocus: true, placeholder: "ジャンル名" %>
        </div>
        <div>
          <%= f.submit '新規投稿', class: "btn btn-sm btn-success" %>
        </div>
      </div>
    <% end %>
    <div class="row" style="margin: 60px 0;">
      <div class="col-md-4">
        <table class="table border-dark">
          <div class="text-center" style="padding-top: 20px; height: 55px; background-color: #fffacd;">ジャンル</div>
          <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class="col-md-5 text-right"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-sm btn-info" %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
