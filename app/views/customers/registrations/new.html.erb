<div class="container">
  <div class="row">
    <div class="col-md-2 text-center" style="margin: 30px 0 35px 0;">
      <h5 style="background-color: #cd5c5c; color: white;">新規会員登録</h5>
    </div>
  </div>
  <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <div class="row" style="font-size: 13px; margin-top: 10px;">
      <div class="col-md-2 text-left">
        <%= f.label :名前 %>
      </div>
      <div class="col-md-1 text-right">
        <%= f.label :（姓） %>
      </div>
      <div class="col-md-1 text-center">
        <%= f.text_field :family_name, aurofocus: true, placeholder: "令和", size: 25 %>
      </div>
      <div class="col-md-2 text-right">
        <%= f.label :（名） %>
      </div>
      <div class="col-md-1 text-center">
        <%= f.text_field :first_name, aurofocus: true, placeholder: "道子", size: 25 %>
      </div>
      <div class="col-md-5 text-center">
      </div>
    </div>

    <div class="row" style="font-size: 13px; margin-top: 10px;">
      <div class="col-md-2 text-left">
        <%= f.label :フリガナ %>
      </div>
      <div class="col-md-1 text-right">
        <%= f.label :（セイ） %>
      </div>
      <div class="col-md-1 text-center">
        <%= f.text_field :family_name_kana, aurofocus: true, placeholder: "レイワ", size: 25 %>
      </div>
      <div class="col-md-2 text-right">
        <%= f.label :（メイ） %>
      </div>
      <div class="col-md-1 text-center">
        <%= f.text_field :first_name_kana, aurofocus: true, placeholder: "ミチコ", size: 25 %>
      </div>
    </div>

    <div class="row" style="font-size: 13px; margin-top: 10px;">
      <div class="col-md-2 text-left">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-md-1 text-right">
      </div>
      <div class="col-md-1 text-right">
        <%= f.email_field :email, autofocus: true, placeholder: 'sample@example.com', size: 25 %>
      </div>
    </div>

    <div class="row" style="font-size: 13px; margin-top: 10px;">
      <div class="col-md-3 text-left">
        <%= f.label :郵便番号（ハイフンなし） %>
      </div>
      <div class="col-md-1 text-center">
        <%= f.text_field :postal_code, aurofocus: true, placeholder: "0000000", size: 25 %>
      </div>
    </div>

    <div class="row" style="font-size: 13px; margin-top: 10px;">
      <div class="col-md-3 text-left">
        <%= f.label :住所 %>
      </div>
      <div class="col-md-1 text-center">
        <%= f.text_field :address, aurofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", size: 66 %>
      </div>
    </div>

    <div class="row" style="font-size: 13px; margin-top: 10px;">
      <div class="col-md-3 text-left">
        <%= f.label :電話番号（ハイフンなし） %>
      </div>
      <div class="col-md-1 text-center">
        <%= f.text_field :phone_number, aurofocus: true, placeholder: "00000000000", size: 25 %>
      </div>
    </div>

    <div class="row" style="font-size: 13px; margin-top: 10px;">
      <div class="col-md-3 text-left">
        <%= f.label :パスワード（６文字以上） %>
      </div>
      <div class="col-md-1 text-left">
        <%= f.password_field :password, autocomplete: "new-password", size: 25 %>
      </div>
    </div>

    <div class="row" style="font-size: 13px; margin-top: 10px;">
      <div class="col-md-3 text-left">
        <%= f.label :パスワード（確認用） %>
      </div>
      <div class="col-md-1 text-left">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 25 %>
      </div>
    </div>

    <div class="row" style="font-size: 13px; margin-top: 10px;">
      <div class="col-md-3 text-left">
      </div>
      <div class="col-md-1 text-right">
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-ig btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-3 text-center" style="margin: 30px 0 35px 0;">
      <h5 style="background-color: #cd5c5c; color: white;">既に登録済みの方</h5>
    </div>
  </div>
      <p class="col-md-4 text-center"><%= link_to 'こちら', new_customer_session_path %>　からログインしてください</p>
</div>
