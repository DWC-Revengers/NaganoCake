<div class="container">
  <div class="row">
    <div class="col-sm-2 text-center" style="margin: 30px;">
      <h4 style="background-color: #dddddd">ログイン</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4 text-center" style="margin: 30px 0 0 50px;">
      <h5 style="background-color: #dddddd">会員の方はこちらからログイン</h5><br>
    </div>
  </div>

      <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
      <div class="row" style="font-size: 18px; margin-top: 10px;">
        <div class="col-md-4 text-center">
         <%= f.label :メールアドレス %>
        </div>
        <div class="col-md-1 text-center">
         <%= f.text_field :email, autofocus: true, placeholder:"メールアドレス", size: 50 %>
        </div>
      </div>

      <div class="row" style="font-size: 18px; margin-top: 10px;">
        <div class="col-md-4 text-center">
          <%= f.label :パスワード %>
        </div>
        <div class="col-md-1 text-center">
          <%= f.text_field :password, autocomplete: "current-password", size: 50 %>
        </div>
     </div>
     <br>
     <div class="row" style="mmargin-top: 10px;">
       <div class="col-sm-9 text-center">
         <div class="actions">
           <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
       </div>
     </div>
     <% end %>
     <div class="row">
      <div class="col-sm-4 text-center" style="margin: 30px 0 15px 50px;">
       <h5 style="background-color: #dddddd">会員登録がお済みでない方</h5>
      </div>
     </div>
      <p class="col-md-6 text-right"><%= link_to 'こちら', new_customer_registration_path %>　から新規登録を行ってください</p>
</div>

