<div class="container">
  <div class="row">
    <div class="col-md-2 text-center" style="margin: 30px 0 35px 0;">
      <h5 style="background-color: #66cdaa">商品一覧</h5>
    </div>
    <div class= "col-md-8 text-right" style="margin: 30px 0 35px 0;">
      <%= link_to "商品追加", new_admin_sweet_path, class: "btn btn-success" %>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th class="header1" style="background-color: #f5f5f5">商品ID</th>
        <th class="header2" style="background-color: #f5f5f5">商品名</th>
        <th class="header3" style="background-color: #f5f5f5">税抜価格</th>
        <th class="header4" style="background-color: #f5f5f5">ジャンル</th>
        <th class="header5" style="background-color: #f5f5f5">ステータス</th>
      </tr>
    </thead>

    <% @sweets.each do |sweet| %>
    <tbody>
      <tr>
        <td><%= sweet.id %></td>
        <td><%= link_to sweet.name, admin_sweet_path(sweet.id), class: "text-dark" %></td>
        <td><%= sweet.unit_price %></td>
        <td><%= sweet.genre.name %></td>
        <td>
          <% if sweet.sale_status %>
          販売中
          <% else %>
          販売停止中
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <div class="pagination">
    <%= paginate @sweets %>
  </div>
</div>
