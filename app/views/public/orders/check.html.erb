<div class="container">
  <div class="row">
    <div class="col-md-2 text-center" style="margin: 30px 0 35px 0;">
      <h5 style="background-color: #f5f5f5">注文情報確認</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 text-center" style="margin: 30px 0 35px 0;">
      <table class="table">
        <thead>
          <tr>
            <th class="header1" style="background-color: #f5f5f5">商品名</th>
            <th class="header2" style="background-color: #f5f5f5">単価（税込）</th>
            <th class="header3" style="background-color: #f5f5f5">数量</th>
            <th class="header4" style="background-color: #f5f5f5">小計</th>
          </tr>
        </thead>

        <% @sum = 0 %>
        <% @orders.each do |order| %>
        <tbody>
          <td>
            <div class="row">
              <div class="col-md-3 text-left">
                <%= attachment_image_tag order.sweet, :image, :fill, 80, 60, format: 'jpeg', fallback: "no_image.jpg", size: "80x60" %>
              </div>
              <div class="col-md-8 text-left" style="margin-top: 18px;">
                <%= order.sweet.name %>
              </div>
            </div>
          </td>
          <td>
            <div style="margin-top: 18px;">
              <%= order.sweet.add_tax_unit_price.to_s(:delimited) %>
            </div>
          </td>
          <td>
            <div style="margin-top: 18px;">
             <%= order.cart_item.amount %>
            </div>
          </td>
          <td>
            <div style="margin-top: 18px;">
              <%= order.amount * order.sweet.add_tax_unit_price %>
            </div>
          </td>
        </tbody>
        <% @sum += (order.amount * order.sweet.add_tax_unit_price) %>
        <% end %>
      </table>
      <div class="ml-auto">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th class="table-secondary">送料</th>
              <th><%= @order.shipping %></th>
            </tr>
            <tr>
              <th>商品合計</th>
              <th><%= @sum.to_s(:delimited) %></th>
            </tr>
            <tr>
              <th>請求金額</th>
              <th><%= @sum.to_s(:delimited) + @order.shipping %></th>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%= form_with model: @order, url: , local:true do |order| %>
  <div class="col-md-6">
    <div class="row" style="margin: 30px 0 35px 0;">
      <div class="col-md-4 text-left">
        <p>支払い方法</p>
      </div>
      <div class="col-md-8 text-left">
        <%= order.payment_method %>
      </div>
    </div>
    <div class="row" style="margin: 30px 0 35px 0;">
      <div class="col-md-4 text-left">
        <p>お届け先</p>
      </div>
      <div class="col-md-8 text-left">
        <%= order.postal_code %></br>
        <%= order.address %></br>
        <%= order.name %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-md-12 text-center">
        <%= order.submit "注文を確定する", class: "btn btn-sm btn-success" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
