<div class="container">
  <div class="row">
    <div class="col-md-1 text-center"></div>
    <div class="col-md-2 text-center" style="margin: 20px;">
      <h5 style="background-color: #dddddd;">会員情報編集</h5>
    </div>
  </div>

    <%= form_with model:@customer, url: public_customer_path, local: true do |f| %>
      <div class="col-md-9">
        <div class="form-group col-md-12">
          <%= f.label :"氏名", class: "col-md-3 control-label" %>
          <%= f.text_field :family_name, class: "col-md-3 form-control-static name" %>
          <%= f.text_field :first_name, class: "col-md-3 form-control-static name" %>
        </div>
        <div class="form-group col-md-12">
          <%= f.label :"フリガナ", class: "col-md-3 control-label" %>
          <%= f.text_field :family_name_kana, class: "col-md-3 form-control-static name" %>
          <%= f.text_field :first_name_kana, class: "col-md-3 form-control-static name" %>
        </div>
        <div class="form-group col-md-12">
          <%= f.label :"郵便番号", class: "col-md-3 control-label" %>
          <%= f.text_field :postal_code, class: "col-md-3 form-control-static" %>
        </div>
        <div class="form-group col-md-12">
          <%= f.label :"住所", class: "col-md-3 control-label" %>
          <%= f.text_field :address, class: "col-md-8 form-control-static" %>
        </div>
        <div class="form-group col-md-12">
          <%= f.label :"電話番号", class: "col-md-3 control-label" %>
          <%= f.text_field :phone_number, class: "col-md-3 form-control-static" %>
        </div>
        <div class="form-group col-md-12">
          <%= f.label :"メールアドレス", class: "col-md-3 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-3 form-control-static" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-4">
          <%= f.submit "編集内容を保存", class: "btn btn-success save col-md-8" %>
        </div>
        <div class="col-md-2">
          <%= link_to '退会する', withdraw_public_customers_path, class: "btn btn-danger col-md-9"%>
        </div>
      </div>
      <% end %>
</div>
